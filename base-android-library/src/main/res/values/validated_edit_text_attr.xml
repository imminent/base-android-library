<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ValidatedEditText">
        <!-- Each criteria corresponds to a criteria in ValidatedEditText.java -->
        <attr name="validation" format="enum">
            <enum name="non_empty" value="0" />
            <enum name="account_name" value="1" />
            <enum name="password" value="2" />
        </attr>
        <attr name="custom_criteria" format="string"/>
        <attr name="invalid_input_indicator" format="reference" />
    </declare-styleable>
</resources>