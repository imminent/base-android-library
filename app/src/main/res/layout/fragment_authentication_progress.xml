<!-- Authentication loading screen -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_gravity="center"
                  android:gravity="center_horizontal"
                  tools:ignore="UselessParent">

        <ProgressBar style="?android:progressBarStyleLarge"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:contentDescription="@string/description_authentication_progress" />

        <LinearLayout android:id="@+id/taking_a_while_panel"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:baselineAligned="true"
                      android:baselineAlignedChildIndex="0"
                      android:visibility="invisible">
            <TextView android:text="@string/taking_a_while"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textAppearance="?android:textAppearanceMedium"
                      android:layout_marginRight="@dimen/element_spacing_normal" />
            <Button android:id="@+id/retry_button"
                    android:text="@string/retry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>